<body>
    <div class="container shape d-flex justify-content-center align-items-center">
        <div class="position-relative">
            <div class="card p-2 text-center">


                <h6 style="color:red;">Verify Your Account</h6>
                <div><span>Security code has been sent to your email</span></div>
                <form method="post">
                    <div>
                        <input type="text" name="securityCode" placeholder="Enter Code" class="m-1 text-center form-control" />
                        <span><h4>@ViewBag.invalidCode</h4></span>
                    </div>
                    <div class="mt-4">
                        <input type="submit" value="Verify" asp-controller="UserSetup" asp-action="Activate" class="btn btn-primary" />
                    </div>

                    <div class="resend">
                        <div class="content d-flex justify-content-center align-items-center">
                            <span>Didn't get the code? </span> <a href='@Url.Action("Resend", "User")' class="text-decoration-none ms-1"> Resend</a>
                        </div>
                    </div>

                </form>
                
            </div>
        </div>
    </div>

</body>
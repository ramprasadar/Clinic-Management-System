@model CmsClientApp.ViewRegModels.RegisterForm
<header>
   
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        .form-gap {
            padding-top: 70px;           

        }
        .shape {
            padding: 10px;
            margin-top: 35px;
            margin-left: 250px;
            width: 400px;
        }
        .reset-button {
            background-color: rgb(2, 131, 211);
            text-align: center;
            border: none;
            padding: 0;
            color: white;
            border-radius: 8px;
            padding: 10px;
            font-weight: bold;
            font-size: 15px;
            cursor: pointer;
            transition: box-shadow 0.15s;
        }

            .reset-button:hover {
                box-shadow: 5px 5px 10px rgba(0,0,0,0.2);
            }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            font-size: 16px;
            color: #2828cd;
        }

        .btn-color {
            background-color: #28a745;
            color: #f8f9fa;
        }

        .container:before {
            
            width: 100%;
            height: 100%;
            background-size: cover;
            content: "";
            position: fixed;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            z-index: -1;
            display: block;
            /*filter: blur(2px);*/
        }
    </style>
</header>
<style>
    .navigation li {
        display: inline-block;
    }
</style>
<nav class="navbar navbar-icon-top navbar-expand-lg navbar-dark bg-dark">
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="navbar-brand" href="#">
                    <img src="~/images/Stone-Clinic-Logo.png" width="50" height="50">
                    The Stone Clinic
                </a>
            </li>
        </ul>
    </div>
    <div class="navbar-collapse collapse justify-content-end">
        <ul class="navigation">
            <li class="nav-item">
                <a class="nav-link btn btn-outline-success" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
        </ul>
    </div>
</nav>
<body>
    <div class="form-gap "></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel">
                    <div class="panel-body card shape">
                        <div class="text-center">
                            
                            <h2 style="color:red;" class="text-center">Forgot Username?</h2>
                            <h4 style="color:black;" class="text-center">Answer the security question and we’ll send you the link to reset password .</h4>
                            <h5 class="text-danger">@ViewBag.errormsg </h5>
                            <div class="panel-body">

                                <form id="forgotusername-form" role="form" autocomplete="off" class="form" method="post">
                                    <div style="color:black" class="form-group text-left">
                                        <label asp-for="SecurityQuestion" class="control-label"></label><span class="text-danger">*</span>
                                        <select asp-for="SecurityQuestion" class="form-control">
                                            <option>What was the name of the first school you remember attending?</option>
                                            <option>What is the name of a college you applied to but didn’t attend?</option>
                                            <option>Where was the destination of your most memorable school field trip?</option>
                                            <option>What was the name of your first stuffed toy?</option>
                                        </select>
                                        <span asp-validation-for="SecurityQuestion" class="text-danger"></span>
                                    </div>
                                    <div style="color:black" class="form-group text-left">
                                        <label asp-for="Answer" class="control-label"></label><span class="text-danger">*</span>
                                        <input id="answer" asp-for="Answer" class="form-control" placeholder="Type answer" />
                                        <span asp-validation-for="Answer" class="text-danger"></span>
                                        <h5 class="text-danger">@ViewBag.err </h5>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="reset-button">Send Reset Link</button>
                                    </div>
                                </form>
                               
                                @if (ViewBag.EmailSentMessage != null)
                                {
                                    <div class="bg-success">
                                        <label>@ViewBag.EmailSentMessage</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
   
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}